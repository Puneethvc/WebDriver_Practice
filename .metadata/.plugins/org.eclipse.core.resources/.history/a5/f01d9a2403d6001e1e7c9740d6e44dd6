package Arrays;

public class RangeOfNumbers {
	public static void main(String[] args) {
		
		int number []={1,2,3,4};

		System.out.println("output"+ findrange(number));

		}

		public static int findrange(int arr[]){

		if(arr==null || arr.length ==0){
		return 0;
		}

		int min=arr[0];
		int max = arr[0];
		for(int i=0;i<arr.length;i++){
		 if(arr[i]<min){
		min=arr[i];
		}
		if(arr[i]>max){
		max=arr[i];
		}
		return max-min;
		}
		return max;
		}
}
